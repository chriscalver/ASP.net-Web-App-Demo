@page
@model ASPTest.Pages.Members.CreateModel
@{
    ViewData["Title"] = "Add New Member";
}

<h2> Add New Member</h2>

<br>

@if (Model.errorMessage.Length > 0)
{

    
    <div class=" row mb-3">
        <div class="col-sm-9">
            <div class="alert alert-danger alert-dismissible fade show" roles="alert">
                <strong>@Model.errorMessage</strong>
            </div>
        </div>
    </div>


}



<form method="POST">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.memberInfo.Name">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Age</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="age" value="@Model.memberInfo.Age">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {

        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" roles="alert">
                    <strong>@Model.successMessage</strong>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/projects/aspwebapp/Members/Index" role="button">Cancel</a>
        </div>
    </div>

</form>